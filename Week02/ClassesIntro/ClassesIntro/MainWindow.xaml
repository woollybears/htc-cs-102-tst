<Window x:Class="ClassesIntro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassesIntro"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="700">
    <StackPanel>
        <Image Source="dog.jpg" Width="700"/>
        <TextBlock>Dog Name: </TextBlock><TextBox Name="DogName"></TextBox>
        <Button Click="Bark_Button_Click">Bark</Button>
        <Button Click="SayName_Button_Click">Say Name</Button>
        <Button Click="Random_Button_Click">Random Sound</Button>
    </StackPanel>
</Window>
