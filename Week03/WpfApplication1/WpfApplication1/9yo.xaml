<Window x:Class="WpfApplication1._9yo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="_9yo" Height="300" Width="400">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="You are currently 9 years old." VerticalAlignment="Top" Width="164"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" Text="You are playing basketball in your driveway and drop the ball. The ball rolls right into the middle of a busy street! " VerticalAlignment="Top" Width="298" Height="85"/>
        <Button x:Name="button" Content="Run into the street and grab the ball" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top" Width="208" Height="52" Click="button_Click"/>
        <Button x:Name="button1" Content="Ask your parents to grab the ball" HorizontalAlignment="Left" Margin="10,202,0,0" VerticalAlignment="Top" Width="208" Height="44" Click="button1_Click"/>

    </Grid>
</Window>
