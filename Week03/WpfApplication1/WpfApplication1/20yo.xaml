<Window x:Class="WpfApplication1._20yo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="_20yo" Height="300" Width="300">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="You are 18 years old" VerticalAlignment="Top" Width="135"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="21,46,0,0" TextWrapping="Wrap" Text="Your parents are very disappointed in you for cheating on the test. The kid next to you did horrible, and you did too!" VerticalAlignment="Top" Width="239" Height="54"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="21,105,0,0" TextWrapping="Wrap" Text="You have graduated high school! You slacked most of the time, and your grades reflect it. You are going to have hard time getting accepted into a good college." VerticalAlignment="Top" Width="248" Height="70"/>
        <Button x:Name="button" Content="Community College here I come!" HorizontalAlignment="Left" Margin="54,180,0,0" VerticalAlignment="Top" Width="184" Height="45" Click="button_Click"/>

    </Grid>
</Window>
